<div id="content">

  <div id="content-header" class="mini hidden-xs">
    <h1>Dashboard</h1>
  </div>

  <div id="breadcrumb">
    <a href="/" title="Go" class="tip-bottom"><i class="fa fa-dashboard"></i> Dashboard</a>
    <a href="#" class="current"><%= fa_icon @range.service.icon %> IP Range <%= @range.network_name %></a>
  </div>

  <div class="container-fluid row">
    <div class="col-xs-12">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon"><%= fa_icon @range.service.icon %></span>
          <h5>IP Range - <%= @range.network_name %></h5>
          <h5 class="pull-right">Subnet: <%= @range.subnet_mask %> | Gateway: <%= @range.gateway %></h5>
        </div>
        <div class="widget-content nopadding table-responsive">
          <table class="table table-striped table-bordered table-hover mycustomclass" id="table-range">
            <thead>
              <tr>
                <th>IP Address</th>
                <th class="hidden-xs">Account Number</th>
                <th>Customer Name</th>
                <th>Home Phone</th>
                <th>TDNP</th>
              </tr>
            </thead><!-- end thead -->

            <tbody>
              <% @range.ip_addresses.each do |ip| %>
                <% if ip.customer.nil? %>
                  <tr>
                    <td><%= link_to ip.ip, iprange_ipaddress_path(ip.ip_range, ip) %></td><td class="hidden-xs">---</td>
                    <td>Unassigned</td>
                    <td>---</td>
                    <td><%= make_tdnp_button(ip.customer) %></td>
                  </tr>
                <% else %>
                  <%= ip.customer.active ?  '<tr>'.html_safe : '<tr class="tdnp">'.html_safe %>
                    <td><%= link_to ip.ip, iprange_ipaddress_path(ip.ip_range, ip) %></td><td class="hidden-xs">000447725</td>
                    <td><%= ip.customer.name %></td>
                    <td><%= number_to_phone(ip.customer.home_phone, area_code: true) %></td>
                    <td><%= make_tdnp_button(ip.customer) %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody><!-- end tbody -->
          </table><!-- end table -->
        </div><!-- end widget-content -->
      </div><!-- end widget-box-->
    </div><!-- end col-xs-12 -->
  </div><!-- end container-fluid -->
</div><!-- end content -->
