<div class="col-sm-3">
  <% if @customer.id.nil? %>
    <button type="button" class="btn btn-info btn-block disabled" disabled="disabled" id="moveBtn">Move</button>
  <% else %>
    <button type="button" class="btn btn-info btn-block" id="moveBtn">Move</button>
  <% end %>
</div>

<% if !@customer.id.nil? %>
<div id="moveConfirm" class="modal fade" style="overflow-y: auto;">
  <div class="modal-dialog">
    <div class="modal-content">
        <%= form_for @customer, url: customer_move_path(@customer), html: {class: 'form-horizontal'} do |f| %>
          <div class="modal-header">
            <button data-dismiss="modal" class="close" type="button">Ã—</button>
            <h3>Move Customer</h3>
          </div>

          <div class="modal-body">
            <div class="row">
              <label class="col-sm-3 control-label">New IP Address</label>
              <div class="col-sm-9">
                <%= f.text_field :ip_address, class: "form-control input-sm", placeholder: '192.168.0.1', value: @customer.ip_address.ip %>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <% if @customer.id.nil? %>
              <button class="btn btn-default btn-primary btn-disabled" href="#">Confirm</a>
            <% else %>
              <%= f.submit 'Save', class: 'btn btn-primary btn-small' %>
            <% end %>
            <a data-dismiss="modal" class="btn btn-default btn-small" href="#">Cancel</a>
          </div>
        <% end %>
    </div>
  </div>
</div><!-- end move modal -->
<% end %>
